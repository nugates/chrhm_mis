@model IEnumerable<SKMISApplication.Models.ConstituencyModel>

@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Constituency Entry</h3>
                        <div style="float: right;">
                            @Html.ActionLink("Create New", "Create", "", htmlAttributes: new { @class = "btn btn-block btn-primary" })
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered table-striped" id="constituencyGrid">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Constituency)</th>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>                                    
                                    <th>Edit  </th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Constituency)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Description)</td>                                        
                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-block glyphicon glyphicon-edit bg-orange" })
                                        </td>
                                        <td>
                                            @*@Html.ActionLink(" ", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-block btn-danger glyphicon glyphicon-trash" })*@
                                            <a href="#" class="btn btn-block btn-danger glyphicon glyphicon-trash" data-toggle="modal"></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
}
