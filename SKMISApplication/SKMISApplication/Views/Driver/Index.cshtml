@model IEnumerable<SKMISApplication.Models.DriverEntryModel>

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Driver List</h3>
                    <div style="float: right;">
                        @*<button type="button" class="btn btn-block btn-primary" onclick="redirect()" id="btn_create">CREATE BENEFICIERY</button>*@
                        @Html.ActionLink("CREATE DRIVER", "Create", "Driver", new { @class = "btn btn-block btn-primary" })
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table" id="tblDriver">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DriverId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DriverName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DriverContactNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DriverAddress)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LicenseNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LicenseState)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LicenseExpiryDate)
                                </th>

                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DriverId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DriverName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DriverContactNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DriverAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LicenseNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LicenseState)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LicenseExpiryDate)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Edit", new { id = item.DriverId }, htmlAttributes: new { @class = "btn btn-default btn-sm glyphicon glyphicon-edit" })

                                    </td>
                                    <td>

                                        <a href="#" class="btn btn-default btn-sm glyphicon glyphicon-trash"
                                           onclick="deleteAnimal(@item.DriverId, '@item.DriverName')"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>



