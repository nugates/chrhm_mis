@model IEnumerable<SKMISApplication.Models.VehicleEntryModel>

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Driver List</h3>
                    <div style="float: right;">
                        @*<button type="button" class="btn btn-block btn-primary" onclick="redirect()" id="btn_create">CREATE BENEFICIERY</button>*@
                        @Html.ActionLink("CREATE DRIVER", "Create", "Driver", new { @class = "btn btn-block btn-primary" })
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table" id="vehTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.VehicleId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VehicleNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VendorID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VechileMake)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Model)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ModelYear)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PlateNo)
                                </th>

                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VehicleId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VehicleNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VendorID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VechileMake)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Model)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModelYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PlateNo)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Edit", new { id = item.VehicleId }, htmlAttributes: new { @class = "btn btn-default btn-sm glyphicon glyphicon-edit" })
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-default btn-sm glyphicon glyphicon-trash"
                                           onclick="deleteVehicle(@item.VehicleId, '@item.VehicleNo')"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>



<script>
    window.onload = function () { ShortTable("#vehTable"); };

    function ShortTable(Tbl) {
       
        $(Tbl).DataTable({
            "order": [[0, "desc"]],
            "sScrollX": "99.8%"
        });
        
    }




    function deleteVehicle(id, aname) {
        swal({
            title: "Are you sure you want to delete?",
            text: "",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Yes",
            closeOnConfirm: true
        },
            function () {
                var url = '@Url.Action("Delete")';
        loadAjax(id, url);
            });

        return false;
}

function loadAjax(id, url) {
    $.ajax({
        url: url,
        type: 'GET',
        cache: false,
        data: { id: id },
        success: function (result) {
            //alert("deleted successfully!");
            swal({
                title: "Deleted Successfully...!",
                text: "",
                type: "success",
                timer: 5000,
                showConfirmButton: false
            });
            //alert($('#result').html(result));
            location.reload();

        }
    });
}
</script>
